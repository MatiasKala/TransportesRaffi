
<div class="main" id="main">
    <div class="col-10">
        <h2>Choferes</h2>
        <br />
        <br />
        <table class="table table-bordered table-striped" id="tabla">
            <thead class="thead-dark">
                <tr>
                    <th>Cuit</th>
                    <th>Nombre Chofer</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Comision</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Chofer c in ViewBag.choferes)
                {
                    <tr>
                        <td>@c.Cuit</td>
                        <td>@c.Nombre</td>
                        <td>@c.FechaNacimiento</td>
                        <td>$@c.Comision</td>
                        <td><a asp-area="" asp-controller="Choferes" asp-action="Edit" asp-route-id="@c.Id" title="Modificar Chofer"><i class="fa fa-edit" id="icono"></i></a></td>
                        <td><a asp-area="" asp-controller="Choferes" asp-action="Delete" asp-route-id="@c.Id" title="Eliminar Chofer"><i class="fa fa-trash" id="icono"></i></a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<br />

<div class="row">
    <div class="col-sm-6 col-md-6 col-lg-8">
        <p></p>
    </div>
    <div class="col-sm-2 col-md-2 col-lg-3" id="crearChofer">
        <p id="crearVehiculo">
            <a asp-action="Create" class="btn btn-outline-primary" title="Agregar nuevo vehiculo">
                Agregar
                nuevo Chofer
            </a>
        </p>
    </div>
</div>