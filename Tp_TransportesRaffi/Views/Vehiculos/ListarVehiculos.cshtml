@model IEnumerable<Tp_TransportesRaffi.Models.Vehiculo>

@{
    ViewData["Title"] = "Listar Vehiculos";
}

<div class="main" id="main">
    <div class="col-12">
        <h2>Vehiculos</h2>
        <br />
        <br />
        <table class="table table-bordered table-striped" id="tabla">
            <thead class="thead-dark">
                <tr>
                    <th>Patente</th>
                    <th>Nombre de chofer</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Vehiculo v in Model)
                {
                    <tr>
                        <td>@v.Patente</td>
                        <td>@v.IdchoferNavigation.Nombre</td>
                        <td>@v.Marca</td>
                        <td>@v.Modelo</td>
                        <td><a asp-area="" asp-controller="Vehiculos" asp-action="Edit" asp-route-id="@v.Id" title="Modificar Vehiculo"><i class="fa fa-edit" id="icono"></i></a></td>
                        <td><a asp-area="" asp-controller="Vehiculos" asp-action="Delete" asp-route-id="@v.Id" title="Eliminar Vehiculo"><i class="fa fa-trash" id="icono"></i></a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<br />

<div class="row">
    <div class="col-sm-6 col-md-6 col-lg-8">
        <p></p>
    </div>
    <div class="col-sm-2 col-md-2 col-lg-3" id="crearVehiculo">
        <p id="crearVehiculo">
            <a asp-action="Create" class="btn btn-outline-primary" title="Agregar nuevo vehiculo">
                Agregar
                nuevo vehiculo
            </a>
        </p>
    </div>
</div>