@model Tp_TransportesRaffi.Models.Vehiculo

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar Vehiculo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idchofer" class="control-label"></label>
                <select asp-for="Idchofer" class="form-control" asp-items="ViewBag.Idchofer"></select>
            </div>
            <div class="form-group">
                <label asp-for="Patente" class="control-label"></label>
                <input asp-for="Patente" class="form-control" />
                <span asp-validation-for="Patente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anio" class="control-label"></label>
                <input asp-for="Anio" class="form-control" />
                <span asp-validation-for="Anio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seguro" class="control-label"></label>
                <input asp-for="Seguro" class="form-control" />
                <span asp-validation-for="Seguro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control">
                    <option value="" disabled hidden selected>Seleccione el Tipo</option>
                    <option value="MOTO">MOTO</option>
                    <option value="CAMION">CAMION</option>
                    <option value="UTILITARIO">UTILITARIO</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary btn-outline-light" />
            </div>
        </form>
    </div>
</div>

<div>

    <a class="btn btn-info btn-outline-light" asp-action="Index">Volver a Lista de Vehiculos</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
